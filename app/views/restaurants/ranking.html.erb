<div class="container">
<h1>Top 10 人氣餐廳</h1>
<hr>


<% @ranked_restaurants.each do |restaurant| %>
<div class="row">
  <div class="col-md-6">
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <%= "收藏數： #{restaurant.favorites_count}" %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= restaurant.description %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= link_to "Show", restaurant_path(restaurant),class: "btn btn-primary" %>
    <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
  </div>
</div>
  <hr>
<% end %>


</div>
